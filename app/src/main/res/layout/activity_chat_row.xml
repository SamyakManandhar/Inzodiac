<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginRight="5sp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_frnduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="100sp"
        android:layout_marginRight="100sp"
        android:layout_marginStart="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivchatprofileId"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/back" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivchatprofileId"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/three_cornor_back"
            android:layout_toEndOf="@+id/ivchatprofileId">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSenderChatId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:padding="@dimen/_10sdp"
                android:text="hello"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="80sp"
        android:layout_marginRight="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10sp"
            >

            <RelativeLayout
                android:id="@+id/rl_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/three_right_cornor_back"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserChatId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5sp"
                    android:padding="@dimen/_10sdp"
                    android:text="hey, how are you"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_marginStart="5sp" />

            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:src="@drawable/back" />

        </LinearLayout>






    </RelativeLayout>


</LinearLayout>