<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.activity.aboutself.AboutSelfActivity">




        <ImageView
            android:id="@+id/ivpic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp">

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_60sdp"
                    android:scaleType="centerCrop"
                    card_view:srcCompat="@drawable/ic_back" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_230sdp"
            android:background="@drawable/top_cornor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical"
                android:id="@+id/llmain"
                android:visibility="gone"

                >

                <TextView
                    android:id="@+id/tvname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/andrea_sanders"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tvage_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="36, Male"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/about_me"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvabout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/my_photos"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />




                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="gone"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Andrea has completed 6 out of 36 details"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/ethnicity"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvethncity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Asian"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/preferred_language"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvlang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="English"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/exercise"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvbodytype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Skinny"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/hair_style"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvhair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Brown"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/preferred_horoscop_type"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/htype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Western"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/relationship_status"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:id="@+id/tvrstatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Single"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_11sdp"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivlike"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        card_view:srcCompat="@drawable/ic_circle_like"/>

                    <ImageView
                        android:id="@+id/ivdislike"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="@dimen/_20sdp"

                        card_view:srcCompat="@drawable/ic_close_icon_perplebg"
                        android:layout_marginLeft="@dimen/_20sdp" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_210sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/left_cornor"
            android:layout_alignParentRight="true">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_15sdp">




                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:id="@+id/iv_western"
                        card_view:srcCompat="@drawable/ic_icon_white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_western"
                        android:text="Capricorn"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_7sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/white"
                        />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_15sdp">




                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:id="@+id/iv_chinese"

                    card_view:srcCompat="@drawable/ic_tiger"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_chinese"
                    android:text="TIGER"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_7sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/white"
                    />


            </LinearLayout>

        </LinearLayout>

        ////send request
        <!--<TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_cornor"
            android:padding="@dimen/_6sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:id="@+id/tv_send_request"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_255sdp"
            android:text="@string/send_request"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />-->



        <LinearLayout
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"

            android:visibility="gone"
            android:layout_marginTop="@dimen/_255sdp"
            android:layout_alignParentEnd="true"
           android:gravity="center"
            android:id="@+id/ll_playgame"
            android:layout_marginEnd="@dimen/_15sdp"
            android:backgroundTint="@color/purple"

            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/white_circle"
            android:orientation="vertical">

        <TextView
            android:layout_width="46dp"
            android:layout_height="match_parent"

            android:id="@+id/tv_send_request"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="PLAY THE GAME"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        </LinearLayout>


       <!-- ////send request
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_cornor"
            android:padding="@dimen/_6sdp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:id="@+id/tv_accept"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_255sdp"
            android:text="Accept"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />-->

    </RelativeLayout>
    </ScrollView>
</layout>