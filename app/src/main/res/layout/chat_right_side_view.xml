<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="@dimen/_5sdp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/right_ivuserimage"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_rightuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/three_right_cornor_back"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/right_tvmsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:text="hey, how are you"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        />

                    <RelativeLayout
                        android:id="@+id/right_rlimage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:visibility="gone">


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/right_ivimage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:riv_corner_radius="@dimen/_5sdp"
                            android:scaleType="centerCrop"
                            />

                        <ProgressBar
                            android:id="@+id/right_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>






                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/right_tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:text="18:22"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPurple"
                    android:textSize="@dimen/_11sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textStyle="normal"
                    android:layout_marginStart="5sp" />

            </LinearLayout>



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/right_ivuserimage"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="3dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>






    </RelativeLayout>

</RelativeLayout>