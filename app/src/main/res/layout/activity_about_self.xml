<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.aboutself.AboutSelfActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp" />


    <ImageView
        android:id="@+id/ivimage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/skip"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:id="@+id/iv_select"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_60sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_plus_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Please upload the photo for your profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_180sdp"
        android:background="@drawable/top_cornor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/tell_about_yourself"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_medium"
                android:text="The more you tell about yourself, the more people will be able to notice you"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/gender"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlmale"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlfemale"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/purple_btn_bg">


                    <TextView
                        android:id="@+id/female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/female"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlnonbinary"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/nonbinary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/non_binary"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

            </LinearLayout>



            //spinner gender non binary
            <RelativeLayout
                android:id="@+id/rl_gender_nonbinary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/transperent_boarder_back"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_gender_nonbinary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Non Binary"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_15sdp" />



                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/ic_dropdown_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tv_gender_nonbinary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp" />

            </RelativeLayout>





















            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/orientation"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            //spinner
            <RelativeLayout
                android:id="@+id/rlintnet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/transperent_boarder_back"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="orientation"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_15sdp" />



                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/ic_dropdown_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tvori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp" />

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Interested In"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rlmale1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/male1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/male"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlfemale1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/purple_btn_bg">


                    <TextView
                        android:id="@+id/female1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/female"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlnonbinary1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/nonbinary1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/non_binary"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

            </LinearLayout>




            //spinner interested non binary
            <RelativeLayout
                android:id="@+id/rl_interestedin_nonbinary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/transperent_boarder_back"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_interestedin_nonbinary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Non Binary"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_15sdp" />



                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/ic_dropdown_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tv_interestedin_nonbinary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp" />

            </RelativeLayout>















            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/looking_for"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            //spinner
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/transperent_boarder_back"
                >
                <androidx.appcompat.widget.AppCompatSpinner

                    android:id="@+id/sp_lookingfor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Looking For"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_15sdp" />



                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/ic_dropdown_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tvlook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp" />

            </RelativeLayout>





            ////category===================>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            //spinner
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/transperent_boarder_back"
                >
                <androidx.appcompat.widget.AppCompatSpinner

                    android:id="@+id/sp_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/category"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_15sdp" />



                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    card_view:srcCompat="@drawable/ic_dropdown_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp" />


                <TextView
                    android:id="@+id/tvcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_35sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textColor="@color/black2"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp" />

            </RelativeLayout>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/date_of_birth"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/carddate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="@dimen/_5sdp"
                card_view:cardElevation="5dp"
                card_view:cardUseCompatPadding="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_calendar">

                    <TextView
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:background="@android:color/transparent"
                        android:focusable="false"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="YYYY/MM/DD"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/colorGray"
                        android:textSize="@dimen/_12sdp" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_calender" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/purple_btn_bg"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/next" />


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:src="@drawable/ic_pagination" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

    </ScrollView>
</layout>