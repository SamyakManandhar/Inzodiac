<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rl_rightuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80sp"
        android:layout_marginStart="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/left_ivuserimage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="3dp"
            android:layout_margin="@dimen/_5sdp"
             />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/left_ivuserimage"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/three_cornor_back"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/left_tvmsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="10sp"
                    android:padding="@dimen/_10sdp"
                    android:text="hello"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


                <RelativeLayout
                    android:id="@+id/left_rlimage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:visibility="gone">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/left_ivimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back"
                        app:riv_border_width=".5dp"
                        app:riv_corner_radius="@dimen/_5sdp" />

                    <ProgressBar
                        android:id="@+id/left_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone" />

                </RelativeLayout>




            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/left_tvtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_1sdp"
                android:text="18:22"
                android:layout_gravity="end"
                android:textColor="@color/colorPurple"
                android:textSize="@dimen/_11sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textStyle="normal"
                android:layout_marginStart="5sp" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>