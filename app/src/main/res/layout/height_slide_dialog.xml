<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/white_background"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:text="Height"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="X"
                    android:background="@drawable/cancel_back"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />




            </RelativeLayout>



            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="@string/between"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />


            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/sb_range_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                app:rsb_indicator_background_color="@color/white"
                app:rsb_indicator_height="15dp"
                app:rsb_indicator_show_mode="alwaysShow"
                app:rsb_indicator_text_color="@color/black"
                app:rsb_max="219"
                app:rsb_min="150"
                android:layout_marginTop="@dimen/_15sdp"
                app:rsb_mode="range"
                app:rsb_progress_color="@color/colorPurple"
                app:rsb_progress_height="2dp"
                app:rsb_thumb_drawable="@drawable/ic_ellipse"
                app:rsb_thumb_scale_ratio="1"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_number="1"
                app:rsb_tick_mark_text_margin="15dp"
                card_view:rsb_gravity="center" />






        </LinearLayout>



    </LinearLayout>


</LinearLayout>
